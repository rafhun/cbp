<?xml version="1.0" encoding="UTF-8"?>
<orderdata>
  <timestamp>[TIMESTAMP]</timestamp>
  <orders>
    <order>
      <id>[ORDER_ID]</id>
      <date>[ORDER_DATE]</date>
      <customer>
        <id>[CUSTOMER_ID]</id>
        <proseco_id>[PROSECO_ID]</proseco_id>
        <username>[CUSTOMER_USERNAME]</username>
        <email>[CUSTOMER_EMAIL]</email>
        <company>[CUSTOMER_COMPANY]</company>
        <firstname>[CUSTOMER_FIRSTNAME]</firstname>
        <lastname>[CUSTOMER_LASTNAME]</lastname>
        <address>[CUSTOMER_ADDRESS]</address>
        <zip>[CUSTOMER_ZIP]</zip>
        <location>[CUSTOMER_CITY]</location>
        <phone>[CUSTOMER_PHONE]</phone>
        <fax>[CUSTOMER_FAX]</fax>
      </customer><!--[[SHIPPING_ADDRESS]-->
      <shippingaddress>
        <company>[SHIPPING_COMPANY]</company>
        <firstname>[SHIPPING_FIRSTNAME]</firstname>
        <lastname>[SHIPPING_LASTNAME]</lastname>
        <address>[SHIPPING_ADDRESS]</address>
        <zip>[SHIPPING_ZIP]</zip>
        <location>[SHIPPING_CITY]</location>
        <phone>[SHIPPING_PHONE]</phone>
      </shippingaddress><!--[SHIPPING_ADDRESS]]--><!--[[ORDER_ITEM]-->
      <product>
        <id>[PRODUCT_ID]</id>
        <code>[PRODUCT_CODE]</code>
        <name>[PRODUCT_TITLE]</name>
        <quantity>[PRODUCT_QUANTITY]</quantity>
        <price>[PRODUCT_TOTAL_PRICE]</price>
        <options><!--[[PRODUCT_OPTION]-->
          <option>
            <id>[OPTION_ID]</id>
            <value>[OPTION_VALUE]</value>
          </option><!--[PRODUCT_OPTION]]-->
        </options>
      </product><!--[ORDER_ITEM]]-->
      <comment>[REMARKS]</comment>
      <currency>[CURRENCY]</currency>
      <sum>[ORDER_SUM]</sum><!--[[SHIPMENT]-->
      <shipment>
        <type>[SHIPMENT_NAME]</type>
        <fee>[SHIPMENT_PRICE]</fee>
      </shipment><!--[SHIPMENT]]--><!--[[PAYMENT]-->
      <payment>
        <type>[PAYMENT_NAME]</type>
        <fee>[PAYMENT_PRICE]</fee>
      </payment><!--[PAYMENT]]-->
      <total>[ORDER_SUM]</total>
    </order>
  </orders>
</orderdata>
